@page
@model EscuelaSystem.Web.Pages.MaestrosModel
@{
}

<h1>Listado de Docentes</h1>
<a class="btn btn-sm btn-success" asp-page="/CrearMaestro">Ingresar Docentes</a>
<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Carnet</th>
            <th>Docente</th>
            <th>Activo</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Maestros)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Carnet</td>
                <td>@item.Docente</td>
                <td>
                    @if (item.Activo)
                    {
                        <p>SI</p> }
                    else
                    {
                        <p>NO</p>}
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditarMaestro" asp-route-id="@item.Id">Editar</a>

                    <a class="btn btn-danger" asp-area="" asp-page="/EliminarMaestro" asp-route-id="@item.Id">Eliminar</a>

                </td>
            </tr>
        }

    </tbody>
</table>