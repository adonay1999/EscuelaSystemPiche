@page
@model EscuelaSystem.Web.Pages.EliminarAlumnoModel
@{
}

<form method="post">
    <input type="hidden" asp-for="Alumno.Id" />
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Alumno.CodigoA"></label>
        <input type="text" class="form-control" asp-for="Alumno.CodigoA" placeholder="Ingrese un codigo de Alumno">
        <span class="text-danger" asp-validation-for="Alumno.CodigoA"></span>
    </div>
    <div class="form-group">
        <label asp-for="Alumno.Nombre"></label>
        <input type="text" class="form-control" asp-for="Alumno.Nombre" placeholder="Ingrese una descripcion de Alumno">
        <span class="text-danger" asp-validation-for="Alumno.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Alumno.Inscrito"></label>
        <input type="checkbox" class="form-control" asp-for="Alumno.Inscrito">
    </div>
    <button type="submit" class="btn btn-danger">Eliminar</button> <br />
    <a asp-page="/Alumnos">Regresar a Alumnos</a>
</form>